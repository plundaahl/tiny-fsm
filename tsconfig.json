{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es6",
            "es7",
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "module": "AMD",
        "outFile": "dist/bundle.js",
        "alwaysStrict": true,
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "index.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/__test__"
    ]
}
